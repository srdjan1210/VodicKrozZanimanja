<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#42A5F5"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#42A5F5">

            <TextView
                android:id="@+id/imeSkole_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Ime skole"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButton_recyclerView"
                style="@style/FlatButton"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_border"
                android:onClick="pogledajSmjerove"
                android:text="Pogledaj smjerove"
                android:layout_gravity="center"
                android:textSize="15sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>